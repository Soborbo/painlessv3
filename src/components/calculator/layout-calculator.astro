---
/**
 * CALCULATOR LAYOUT
 * 
 * Main layout wrapper for calculator pages
 */

import '@/styles/global.css';
import ProgressBarComponent from './progress-bar.astro';

interface Props {
  title?: string;
  description?: string;
  currentStep?: number;
}

const {
  title = 'Calculator',
  description = 'Get your custom quote',
  currentStep = 1,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Calculator Boilerplate</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background antialiased">
    <!-- Header -->
    <header class="border-b">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold text-primary">
            Calculator Boilerplate
          </a>
          <nav class="hidden md:flex items-center gap-6">
            <a
              href="/#features"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              Features
            </a>
            <a
              href="/#pricing"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              Pricing
            </a>
            <a
              href="/#contact"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              Contact
            </a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
      <!-- Progress Bar -->
      <div class="max-w-4xl mx-auto mb-8">
        <ProgressBarComponent currentStep={currentStep} />
      </div>

      <!-- Calculator Content -->
      <div class="max-w-4xl mx-auto">
        <slot />
      </div>
    </main>

    <!-- Footer -->
    <footer class="border-t mt-16">
      <div class="container mx-auto px-4 py-8">
        <div class="text-center text-sm text-muted-foreground">
          <p>&copy; 2024 Calculator Boilerplate. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
